<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>preview</LangVersion>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>remotemvvm</ToolCommandName>
    <PackageId>RemoteMvvm</PackageId>
    <Version>0.0.1</Version>
	  <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
	    <Authors>Bud Cribar</Authors>
    <Description>A command line tool for generating gRPC remote MVVM proxies and server implementations.</Description>
    <PackageTags>sourcegenerator;mvvm;grpc;roslyn;automation;PeakSWC</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <!--<EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>-->
    <Nullable>enable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <IsPackable>true</IsPackable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
	  <PackageOutputPath>$(MSBuildThisFileDirectory)publish\</PackageOutputPath>
    <!-- Suppress missing XML doc warnings for generator classes since they're internal implementation -->
    <NoWarn>$(NoWarn);CS1591</NoWarn>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="Resources\ClientTemplate.tmpl" />
  </ItemGroup>
  
  <ItemGroup>
          <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
          <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.13.0" />
    <!--<Compile Remove="GameViewModel.cs" />-->
  </ItemGroup>
    <ItemGroup>
      <PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="Resources/ClientTemplate.tmpl" LogicalName="RemoteMvvmTool.Resources.ClientTemplate.tmpl" />
      <EmbeddedResource Include="Resources/ConversionTemplate.tmpl" LogicalName="RemoteMvvmTool.Resources.ConversionTemplate.tmpl" />
      <EmbeddedResource Include="Resources/OptionsTemplate.tmpl" LogicalName="RemoteMvvmTool.Resources.OptionsTemplate.tmpl" />
      <EmbeddedResource Include="Resources/ProtoTemplate.tmpl" LogicalName="RemoteMvvmTool.Resources.ProtoTemplate.tmpl" />
      <EmbeddedResource Include="Resources/ServerTemplate.tmpl" LogicalName="RemoteMvvmTool.Resources.ServerTemplate.tmpl" />
    </ItemGroup>
    <ItemGroup>
      <Folder Include="publish\" />
    </ItemGroup>
	<Target Name="InstallTool" AfterTargets="Pack">
		<Exec Command="dotnet tool uninstall --global $(PackageId)" ContinueOnError="true" />
		<Exec Command="dotnet tool install --global --add-source $(PackageOutputPath) $(PackageId) --version $(Version)" />
	</Target>
</Project>
