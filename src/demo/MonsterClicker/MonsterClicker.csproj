<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net8.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<UseWPF>true</UseWPF>
	</PropertyGroup>

	<ItemGroup>
	  <PackageReference Include="CommunityToolkit.Mvvm" Version="8.4.0" />
	  <PackageReference Include="Grpc" Version="2.46.6" />
	  <PackageReference Include="Grpc.Net.Client" Version="2.71.0" />
	  <PackageReference Include="Grpc.Tools" Version="2.72.0">
	    <PrivateAssets>all</PrivateAssets>
	    <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
	  </PackageReference>
      <Protobuf Include="Protos\GameService.proto" GrpcServices="Both" ProtoRoot="Protos\" Access="Public" />
	</ItemGroup>

	<Target Name="GenerateProtoFile" BeforeTargets="ProtoCompile">
		<Message Text="Generating GameService.proto file..." Importance="high" />
		<Exec Command="dotnet run --project &quot;$(MSBuildProjectDirectory)\..\ProtoGeneratorUtil\ProtoGeneratorUtil.csproj&quot; -- ^&#xD;&#xA;                       --viewModelFiles &quot;$(MSBuildProjectDirectory)\ViewModels\GameViewModel.cs&quot; ^&#xD;&#xA;                       --output &quot;$(MSBuildProjectDirectory)\Protos\GameService.proto&quot; ^&#xD;&#xA;                       --protoNamespace &quot;MonsterClicker.Protos.Game&quot; ^&#xD;&#xA;                       --serviceName &quot;GameService&quot;" Condition="Exists('$(MSBuildProjectDirectory)\..\ProtoGeneratorUtil\ProtoGeneratorUtil.csproj') AND Exists('$(MSBuildProjectDirectory)\ViewModels\GameViewModel.cs')" />
		<Message Text="ProtoGeneratorUtil project or ViewModel file not found. Skipping .proto file generation via Exec task." Importance="warning" Condition="!Exists('$(MSBuildProjectDirectory)\..\ProtoGeneratorUtil\ProtoGeneratorUtil.csproj') OR !Exists('$(MSBuildProjectDirectory)\ViewModels\GameViewModel.cs')" />
	</Target>

	<ItemGroup>
	  <ProjectReference Include="..\..\RemoteAttribute\RemoteAttribute.csproj" />
		<ProjectReference Include="..\..\PeakSWC.MvvmSourceGenerator\PeakSWC.MvvmSourceGenerator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="protos\" />
	</ItemGroup>

</Project>
