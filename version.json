{
  "$schema": "https://raw.githubusercontent.com/dotnet/Nerdbank.GitVersioning/master/src/NerdBank.GitVersioning/version.schema.json",
  "version": "1.0", // Your base version
  "publicReleaseRefSpec": [
    "^refs/heads/main$", // Main branch releases
    "^refs/tags/v\\d+\\.\\d+(?:\\.\\d+)?(?:-\\S*)?$" // Tags like v1.0, v1.0.3, v1.0.3-beta
  ],
  "cloudBuild": {
    "buildNumber": {
      "enabled": true
    }
  }
}